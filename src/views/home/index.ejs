<%- include('../includes/head.ejs') %>
  </head>
  <body>
    <div id="wrapper">
<%- include('../includes/navigation.ejs') %>
      <section id="cta" class="section">
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-12 align-self-center">
              <h2>All Technology Realated blog</h2>
              <p class="lead">
                 This Blogging website that covers a wide range of topics related to technology, including the latest trends, updates, news, and opinions on various tech-related subjects. This type of blog may cover topics such as gadgets, software, social media, cybersecurity, artificial intelligence, internet of things, and more. It can serve as a valuable resource for individuals seeking to stay informed about the ever-evolving world of technology.
              </p>
              <!-- <a href="#" class="btn btn-primary">Try for free</a> -->
            </div>
          </div>
        </div>
      </section>

      <section class="section lb">
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
              <% blogs.forEach(function(blog) { %>
                <div class="page-wrapper">
                  <div class="blog-custom-build">
                    <div class="blog-box wow fadeIn">
                      <div class="post-media">
                        <a href="<%= blog.fullBlogLink%>" title="">
                          <img
                            src="<%= blog.imageUrl%>"
                            alt=""
                            class="img-fluid"
                          style="max-height: 500px;object-fit: cover;"

                          />
                          <div class="hovereffect">
                            <span></span>
                          </div>
                          <!-- end hover -->
                        </a>
                      </div>
                      <!-- end media -->
                      <div class="blog-meta big-meta text-center">
                        <h4>
                          <a href="<%= blog.fullBlogLink%>" title=""
                            ><%= blog.title %></a
                          >
                        </h4>
                        <p>
                          <%= blog.description %>
                        </p>
                        <small
                          ><a href="#" title=""
                            ><%= blog.category %></a
                          ></small
                        >
                        <small
                          ><a href="#" title=""
                            ><%= blog.date %></a
                          ></small
                        >
                        <small><a href="#" title=""><%= blog.author %></a></small>
                      </div>
                      <!-- end meta -->
                    </div>
                    <!-- end blog-box -->
  
                    <hr class="invis" />
                  </div>
                </div>
                <hr class="invis" />
             <% }); %> 
              <hr class="invis" />

              <div class="row">
                <div class="col-md-12">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                          <% if(previousPageNumber > 0){ %>
                            <li class="page-item">
                              <a class="page-link" href="https://readtechblog.tech/?page=<%= page - 1%>">Previous</a>
                            </li>
                         <% } %>
                            <li class="page-item page-link"><%= page %></li>
                            <% if(nextPageNumber < totalBlogs){ %>
                          <li class="page-item">
                            <a class="page-link" href="https://readtechblog.tech/?page=<%= +page + 1%>">Next</a>
                          </li>
                          <% } %>
                        </ul>
                    </nav>
                </div><!-- end col -->
            </div><!-- end row -->
            </div>
            <!-- end col -->

            <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
              <div class="sidebar">
                <%- include('../includes/recentPosts.ejs') %>
                <%- include('../includes/popularCategories.ejs') %>

              </div>
              <!-- end sidebar -->
            </div>
            <!-- end col -->
          </div>
          <!-- end row -->
        </div>
        <!-- end container -->
      </section>

<%- include('../includes/end.ejs') %>

